<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ModulusFE_LineStudies="clr-namespace:ModulusFE.LineStudies" 
  >

    <Style TargetType="{x:Type ModulusFE_LineStudies:HorizontalLineStudyValuePresenter}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ModulusFE_LineStudies:HorizontalLineStudyValuePresenter}">
                    <Grid RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="-2"/>
                            </TransformGroup>
                        </Grid.RenderTransform>
                        <TextBlock Text="{Binding Value}" 
                       FontSize="{TemplateBinding FontSize}" FontFamily="{TemplateBinding FontFamily}"
                       Foreground="{TemplateBinding Foreground}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>