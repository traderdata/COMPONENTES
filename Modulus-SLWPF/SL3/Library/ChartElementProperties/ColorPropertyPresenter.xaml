<UserControl x:Class="ModulusFE.ChartElementProperties.ColorPropertyPresenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Height="20">
    <Grid x:Name="LayoutRoot" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Canvas x:Name="canvas" Background="Blue" Margin="1"/>
        <Button Content="..." x:Name="btnChooseColor" Grid.Column="1" Margin="1" Click="btnChooseColor_Click"/>
    </Grid>
</UserControl>
